<%- include("../partials/header") %>     
<%- include("../partials/navbar") %> 

<br>
<br>
<br>

<div class="container mt-5 mb-5" style="background-color: #f56262c2;">

    <h3 class="text-center mb-5"> Your cart</h3>

    <div class="row">

      <div class="col-lg-8">

          <%for ( let item of user.cart)  { %> 

                  <div class="card mb-3" style="max-width: 740px; height: auto; border: 2px solid rgba(238, 234, 234, 0.589);">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img src="<%= item.image %>" alt="..." style="width:100%; height:190px; box-sizing: content-box;">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%= item.name %> </h5>
                          <!-- <p class="card-text">&#x20B9; <%= item.price %></p> -->
                          <p class="card-text"><small class="text-muted"><%= item.desc.substring(0,150) %> ... </small></p>
                        </div>
                        <form action="/user/<%= currentUser._id %>/cart/<%= item._id %>?_method=DELETE" method="POST" class="mx-3 mt-2">
                          <button class="btn btn-sm btn-danger"> Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>

          <%}%> 

      </div>


      <div class="col-lg-4"> <H4 style="color: azure;" >PRICE DETAILS</H4> <hr class="bg-light w-75">
        

              <% let totalAmount = 0; if (  currentUser.cart.length == 0) { %> 

                <div class="card w-75">
                  <div class="card-body">
                    <h5 class="card-title">Total Amount :</h5>
                    <p class="card-text"> <%= totalAmount %> </p>
                  </div>
                </div>
        
              <% } else { for ( let item of user.cart) { totalAmount += item.price; %> 

                      <div class="card w-75 mb-2 bg-light" style="border: none; ">
                        <div class="card-body">
                          <h5 class="card-title"> <%= item.name %> :</h5>
                          <p class="card-text"> &#x20B9; <%= item.price %>  </p>
                        </div>
                      </div>
                     
                <% } %> 
                
                  
                  <h5 class="my-3 d-inline-block px-4 py-2" style="color: rgb(11, 73, 82); font-weight: 700; "> Total Amount = &#x20B9; <%= totalAmount %> </h5>
                  <br>
                  <a href="/user/<%=  %> payment" class="btn mx-4 my-2 px-4 py-3" style="background-color: rgb(10, 52, 131); color: lavender;"> Checkout</a>
        
                <% } %> 


      
      
      </div>


    </div>

    

        

        
</div>









<%- include("../partials/footer") %> 